@using System.Globalization
@using BillyCMD.Data
@model InvoiceModel

@*@{*@
@*     var Model = new InvoiceModel();*@
@*}*@

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Invoice @Model.Invoice.Number for contract @Model.Contract.Number</title>
    <style type="text/css">
        body {
            font-family: Cambria;
            font-size: 11pt; 
        }

        table {
            width: 100%;
            border: 0; /* border="0" */
            border-collapse: collapse; /* cellspacing="0" */
        }

            table td {
                padding: 0px; /* cellpadding="0" */
            }

        h1 {
            border: 1pt solid black;
            text-align: center;
            font-size: 14pt;
        }

        .doc-column {
            width: 50%;
            padding: 10pt;
            vertical-align: top;
        }

        .sheet {
            border: 1pt solid black;
        }

        .sheet th, .sheet td {
            padding: 5pt;
            border:1px solid black;
        }

        .sheet td {

            vertical-align: top;
            font-size: 11pt;
        }

    </style>
</head>
<body>

    <table>
        <tr>
            <td class="doc-column">
                <h1>
                    Invoice<br />
                    #@Model.Invoice.Number,<br />
                    @Model.Invoice.Date.ToLongDateForEn()
                </h1>
                <p>
                    Payer: <strong>Happy Customer LTD</strong>
                </p>
            </td>
            <td class="doc-column">
                <h1>
                    Рахунок-фактура <br />
                    №@Model.Invoice.Number,<br />
                    @Model.Invoice.Date.ToLongDateForUa()
                </h1>
                <p>
                    Платник: <strong>ТзОВ «Щасливий Клієнт»</strong>
                </p>
            </td>
        </tr>
    </table>

<table>
    <tr>
        <td class="doc-column">


            <table class="sheet">
                <tr>
                    <th>#</th>
                    <th>Designation</th>
                    <th>Period</th>
                    <th>Total</th>
                </tr>
                <tr>
                    <td>1</td>
                    <td>
                        Payment for provided services in software development
                        under the Contract @Model.Contract.Number from @Model.Contract.Date.ToShortDateForEn()
                </td>
                    <td>@Model.Invoice.Period.From.ToShortDateForEn()-<br />@Model.Invoice.Period.To.ToShortDateForEn()</td>
                    <td>@Model.Invoice.Total.AsUSDForEn()</td>
                </tr>
            </table>

        </td>
        <td class="doc-column">

            <table class="sheet">
                <tr>
                    <th>#</th>
                    <th>Призначення</th>
                    <th>Період</th>
                    <th>Сума</th>
                </tr>
                <tr>
                    <td>1</td>
                    <td>
                        Плата по  Контракту @Model.Contract.Number від @Model.Contract.Date.ToShortDateForUa()
                        за розробку програмного забеспечення
                    </td>
                    <td>@Model.Invoice.Period.From.ToShortDateForUa()-<br />@Model.Invoice.Period.To.ToShortDateForUa()</td>
                    <td>@Model.Invoice.Total.AsUSDForUa()</td>
                </tr>
            </table>

        </td>
    </tr>
</table>


<table>
    <tr>
        <td class="doc-column">
            <h3>Bank Details</h3>
            <p>
                &lt;- bank details in english -&gt;
            </p>
        </td>
        <td class="doc-column">
            <h3>Банківські реквізити</h3>
            <p>
              &lt;- bank details in ukrainian -&gt;
            </p>
        </td>
    </tr>
</table>


<table>
    <tr>
        <td class="doc-column">
            <h3>Private Entrepreneur</h3>
            <p>Petrenko Petr Petrovich</p>
        </td>
        <td class="doc-column">
            <h3>Фізична особа-підприємець </h3>
            <p>Петренко Петро Петрович</p>
        </td>
    </tr>
</table>

</body>
</html>